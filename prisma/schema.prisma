// prisma/schema.prisma
generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions"]
}

datasource db {
  provider   = "postgresql"
  url        = env("DATABASE_URL")
  extensions = [postgis]
}

model User {
  id        String   @id @default(cuid())
  googleId  String   @unique @map("google_id")
  email     String   @unique
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  sessions           Session[]
  submittedCultures  Culture[]

  @@map("users")
  @@index([email])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

enum CultureState {
  approved
  pending
}

model Culture {
  id          String       @id @default(cuid())
  name        String       @unique
  slug        String       @unique
  state       CultureState @default(pending)
  description String?
  flagUrl     String?      @map("flag_url")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  submittedById String? @map("submitted_by_id")
  submittedBy   User?   @relation(fields: [submittedById], references: [id])

  // Relations
  languages Language[]
  contents  Content[]

  @@map("cultures")
  @@index([slug])
  @@index([state])
}

model Language {
  id   String @id @default(cuid())
  name String

  cultureId String  @map("culture_id")
  culture   Culture @relation(fields: [cultureId], references: [id], onDelete: Cascade)

  phrases Phrase[]

  @@map("languages")
}

model Phrase {
  id          String @id @default(cuid())
  languageId  String @map("language_id")
  text        String // original phrase text
  translation String // translated phrase text
  audioUrl    String @map("audio_url")

  language  Language @relation(fields: [languageId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now()) @map("created_at")

  @@map("phrases")
}

enum ContentType {
  UPLOAD        // auto-detect image or video
  VIDEO_YOUTUBE
}

model Content {
  id          String      @id @default(cuid())
  title       String
  contentType ContentType @map("content_type")
  contentUrl  String?     @map("content_url")

  cultureId String  @map("culture_id")
  culture   Culture @relation(fields: [cultureId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now()) @map("created_at")

  @@map("contents")
}
