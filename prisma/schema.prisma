// prisma/schema.prisma
generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions"]
}

datasource db {
  provider   = "postgresql"
  extensions = [postgis]
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  firstName String   @map("first_name")
  lastName  String   @map("last_name")
  isAdmin   Boolean  @default(false) @map("is_admin")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  submittedNations Nation[]

  @@map("users")
  @@index([email])
}

enum NationState {
  approved
  pending
}

model Nation {
  id          String      @id @default(cuid())
  name        String      @unique
  slug        String      @unique
  state       NationState @default(pending)
  description String?
  flagUrl     String?     @map("flag_url")

  // Note: boundary geometry column is managed via raw SQL (PostGIS)
  // Not represented in Prisma model as Prisma doesn't support PostGIS types

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  submittedById String? @map("submitted_by_id")
  submittedBy   User?   @relation(fields: [submittedById], references: [id])

  // Relations
  languages Language[]
  contents  Content[]

  @@map("nations")
  @@index([slug])
  @@index([state])
}

model Language {
  id          String @id @default(cuid())
  name        String
  description String

  nationId String @map("nation_id")
  nation   Nation @relation(fields: [nationId], references: [id], onDelete: Cascade)

  phrases Phrase[]

  @@map("languages")
}

model Phrase {
  id          String @id @default(cuid())
  languageId  String @map("language_id")
  text        String // original phrase text
  translation String // translated phrase text
  audioUrl    String @map("audio_url")

  language  Language @relation(fields: [languageId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now()) @map("created_at")

  @@map("phrases")
}

enum ContentType {
  IMAGE_UPLOAD
  VIDEO_UPLOAD
  VIDEO_YOUTUBE
}

enum ContentCategory {
  FOOD
  MUSIC
  OTHER
}

model Content {
  id          String          @id @default(cuid())
  title       String
  contentType ContentType     @map("content_type")
  contentUrl  String?         @map("content_url")
  category    ContentCategory @default(OTHER)

  nationId String @map("nation_id")
  nation   Nation @relation(fields: [nationId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now()) @map("created_at")

  @@map("contents")
}
